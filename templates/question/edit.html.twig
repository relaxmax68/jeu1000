{% extends 'base.html.twig' %}

{% block title %}Editer la question!{% endblock %}

{% block body %}
<div class="container">
	<h1> La question editer:</h1>
	{{ form_start(form) }}
	{{ form_rest(form) }}
	<button type="submit" class="btn btn-dark">Enregistrer</button>
	{{ form_end(form) }}
	<a class="btn btn-info" href="{{ path('question_liste') }}">Retour</a>
	
	<form method="post" action="{{ path('question_supprimer', {'id': id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la question?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
	</div>
{% endblock %}
