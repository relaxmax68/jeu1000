{% extends 'base.html.twig' %}

{% block title %}Jeu des 1000€{% endblock %}

{% block body %}
	<div class="container mt-3">
		<div class="jumbotron text-center">
			<h1>"Jeu des 1000€"</h1>
			<hr>
			<h3 class="text-capitalize" style="font-size: 4rem;">Nom des joueurs</h3>
			<div>score :{{ score }}</div>
		</div>
		<div class="btn-block btn-{{ status }} btn-lg text-center">
			{{ niveau }}
		</div>
		<div class="btn-block btn-lg"></div>
		<div class="row">
		  <div class="col-lg-6">
		  	<div class="jumbotron">
		  		<div class="row">
		  			<a href="{{ path('question')}} ">
				  		<div class="btn btn-outline-primary">
					  		<div><i class="fas fa-question-circle" style="font-size: 3rem;"></i></div>
					  		<div>Nouvelle Question</div>
				  		</div>
			 	 	</a>
			  		<div class="card-body ml-1">{{ question.question.question }}</div>
		  		</div>
		  	</div>
		    <div class="btn-block btn-md"></div>
		    <button class="btn-block btn-success btn-lg text-center">Bonne réponse</button>
		  </div>
		  <div class="col-lg-6">
		  	<div class="jumbotron">
		  		<div class="row">
		  			<div onclick="javascript:visibilite('reponse'); return false;">
			  			<div class="btn btn-outline-info">
					  		<div><i class="fas fa-comment-dots" style="font-size: 3rem;"></i></div>
				  			<div>Obtenir la réponse</div>
				  		</div>
				  	</div>
			  		<div class="card-body ml-1" style="display:none" id="reponse">{{ question.question.answer }}</div>
		  		</div>
		  	</div>
		  	<div class="btn-block btn-md"></div>
		    <button class="btn-block btn-danger btn-lg text-center">Mauvaise réponse</button>
		  </div>
		</div>
		<hr>
		<div class="progress">
			<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
<script>
	function visibilite(thingId) { var targetElement; targetElement = document.getElementById(thingId) ; if (targetElement.style.display == "none") { targetElement.style.display = "" ; } else { targetElement.style.display = "none" ; } } 
</script>
{% endblock %}
